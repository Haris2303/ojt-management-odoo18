<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ojt_event_link_view_tree" model="ir.ui.view">
        <field name="name">ojt.event.link.view.tree</field>
        <field name="model">ojt.event.link</field>
        <field name="arch" type="xml">
            <list>
                <field name="title"/>
                <field name="batch_id"/>
                <field name="date_start"/>
                <field name="is_mandatory"/>
            </list>
        </field>
    </record>

    <record id="ojt_event_link_view_form" model="ir.ui.view">
        <field name="name">ojt.event.link.view.form</field>
        <field name="model">ojt.event.link</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_participants" type="object" class="oe_stat_button" icon="fa-users">
                            <field name="participant_count" widget="statinfo" string="Participants"/>
                        </button>
                        <button name="action_view_attendance_log" type="object" class="oe_stat_button" icon="fa-calendar-check-o">
                            <field name="attendance_count" widget="statinfo" string="Attendance"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1><field name="title" placeholder="Session Title" readonly="True"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="batch_id"/>
                            <field name="event_id"/>
                            <field name="instructor_id"/>
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                    </group>
                    <group>
                        <field name="is_mandatory"/>
                        <field name="weight"/>
                        <field name="online_meeting_url"/>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                        <page string="QR Code for Check-in">
                            <field name="qr_code_image" widget="image" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="ojt_event_link_view_calendar" model="ir.ui.view">
        <field name="name">ojt.event.link.view.calendar</field>
        <field name="model">ojt.event.link</field>
        <field name="arch" type="xml">
            <calendar string="Agenda Calendar" date_start="date_start" date_stop="date_end" color="batch_id">
                <field name="title"/>
                <field name="batch_id"/>
            </calendar>
        </field>
    </record>

    <!-- for smart button -->
    <record id="action_ojt_event_link_from_batch" model="ir.actions.act_window">
        <field name="name">Agenda/Events</field>
        <field name="res_model">ojt.event.link</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('batch_id', '=', active_id)]</field>
        <field name="context">{'default_batch_id': active_id}</field>
    </record>

    <record id="action_ojt_event_link" model="ir.actions.act_window">
        <field name="name">Agenda/Events</field>
        <field name="res_model">ojt.event.link</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
    </record>
</odoo>