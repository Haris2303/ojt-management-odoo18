<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="ojt_event_link_tree_view" model="ir.ui.view">
            <field name="name">ojt.event.link.tree</field>
            <field name="model">ojt.event.link</field>
            <field name="arch" type="xml">
                <list editable="bottom">
                    <field name="batch_id"/>
                    <field name="event_id" required="1"/>
                    <field name="is_mandatory"/>
                    <field name="online_meeting_url" widget="url"/>
                </list>
            </field>
        </record>

        <record id="ojt_event_link_form_view" model="ir.ui.view">
            <field name="name">ojt.event.link.form</field>
            <field name="model">ojt.event.link</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="batch_id"/>
                            <field name="event_id"/>
                            <field name="is_mandatory"/>
                            <field name="online_meeting_url" widget="url"/>
                            <field name="notes"/>
                        </group>
                        <group string="QR Code for Check-in">
                            <field name="qr_code_image" widget="image" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_ojt_event_link" model="ir.actions.act_window">
            <field name="name">OJT Agenda</field>
            <field name="res_model">ojt.event.link</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('batch_id', '=', active_id)]</field>
            <field name="context">{'default_batch_id': active_id}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No agenda has been set for this batch.
                </p><p>
                    Click "Create" to link events and sessions to this OJT batch.
                </p>
            </field>
        </record>

    </data>
</odoo>