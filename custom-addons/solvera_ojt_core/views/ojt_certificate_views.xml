<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ojt_certificate_view_tree" model="ir.ui.view">
        <field name="name">ojt.certificate.view.tree</field>
        <field name="model">ojt.certificate</field>
        <field name="arch" type="xml">
            <list string="Certificates">
                <field name="name"/>
                <field name="participant_id"/>
                <field name="batch_id"/>
                <field name="serial"/>
                <field name="issued_on"/>
                <field name="grade"/>
                <field name="state" widget="badge" decoration-success="state == 'issued'" decoration-danger="state == 'revoked'"/>
            </list>
        </field>
    </record>

    <record id="ojt_certificate_view_form" model="ir.ui.view">
        <field name="name">ojt.certificate.view.form</field>
        <field name="model">ojt.certificate</field>
        <field name="arch" type="xml">
            <form string="Certificate">
                <header>
                    <button name="action_issue" string="Issue Certificate" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,issued,revoked"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                        <h2><field name="serial" readonly="1"/></h2>
                    </div>
                    <group>
                        <group>
                            <field name="participant_id"/>
                            <field name="batch_id"/>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="issued_on"/>
                            <field name="grade"/>
                            <field name="final_score"/>
                            <field name="attendance_rate"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Internal Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="ojt_certificate_action" model="ir.actions.act_window">
        <field name="name">Certificates</field>
        <field name="res_model">ojt.certificate</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Belum ada sertifikat yang dibuat.
            </p><p>
                Klik untuk membuat record sertifikat baru.
            </p>
        </field>
    </record>

    <menuitem
        id="ojt_certificate_menu"
        name="Certificates"
        parent="menu_ojt_root"
        action="ojt_certificate_action"
        sequence="4"/>

</odoo>