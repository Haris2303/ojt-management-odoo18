<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ojt_assignment_view_form" model="ir.ui.view">
        <field name="name">ojt.assignment.view.form</field>
        <field name="model">ojt.assignment</field>
        <field name="arch" type="xml">
            <form string="OJT Assignment">
                <header>
                    <button name="action_open" string="Open Assignment" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_close" string="Close Assignment" type="object" class="oe_highlight" invisible="state != 'open'"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object" invisible="state == 'draft'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,open,closed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g. Buat Laporan Mingguan"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="batch_id"/>
                        </group>
                        <group>
                            <field name="deadline"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="ojt_assignment_view_tree" model="ir.ui.view">
        <field name="name">ojt.assignment.view.tree</field>
        <field name="model">ojt.assignment</field>
        <field name="arch" type="xml">
            <list string="Assignments">
                <field name="name"/>
                <field name="batch_id"/>
                <field name="deadline"/>
                <field name="state" widget="badge" decoration-success="state == 'closed'" decoration-info="state == 'open'"/>
            </list>
        </field>
    </record>

    <record id="ojt_assignment_view_kanban" model="ir.ui.view">
        <field name="name">ojt.assignment.view.kanban</field>
        <field name="model">ojt.assignment</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="name"/>
                <field name="deadline"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <span><t t-esc="record.name.value"/></span>
                                    </strong>
                                </div>
                            </div>
                            <ul>
                                <li>Deadline: <t t-esc="record.deadline.value"/></li>
                            </ul>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="ojt_assignment_action" model="ir.actions.act_window">
        <field name="name">Assignments</field>
        <field name="res_model">ojt.assignment</field>
        <field name="view_mode">kanban,list,form</field>
    </record>

</odoo>