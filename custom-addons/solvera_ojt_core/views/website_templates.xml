<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="ojt_certificate_verification_page" name="OJT Certificate Verification">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container py-5">
                    <div class="col-md-8 mx-auto">
                        
                        <t t-if="certificate">
                            <div class="card border-success">
                                <div class="card-header bg-success text-white">
                                    <h4 class="mb-0"><i class="fa fa-check-circle"/> Sertifikat Terverifikasi</h4>
                                </div>
                                <div class="card-body">
                                    <p class="lead">Sertifikat ini valid dan terdaftar dalam sistem kami dengan detail sebagai berikut:</p>
                                    <table class="table table-bordered">
                                        <tr>
                                            <th style="width: 30%;">Nama Peserta</th>
                                            <td><t t-esc="certificate.participant_id.partner_id.name"/></td>
                                        </tr>
                                        <tr>
                                            <th>Program OJT</th>
                                            <td><t t-esc="certificate.batch_id.name"/></td>
                                        </tr>
                                        <tr>
                                            <th>Nomor Serial</th>
                                            <td><t t-esc="certificate.serial"/></td>
                                        </tr>
                                        <tr>
                                            <th>Tanggal Terbit</th>
                                            <td><span t-esc="certificate.issued_on.strftime('%d %B %Y')"/></td>
                                        </tr>
                                        <tr>
                                            <th>Nilai Akhir / Grade</th>
                                            <td><t t-esc="certificate.final_score"/> / <t t-esc="certificate.grade"/></td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </t>

                        <t t-else="">
                            <div class="card border-danger">
                                <div class="card-header bg-danger text-white">
                                    <h4 class="mb-0"><i class="fa fa-times-circle"/> Verifikasi Gagal</h4>
                                </div>
                                <div class="card-body">
                                    <p class="lead">Token verifikasi tidak valid atau sertifikat tidak ditemukan dalam sistem kami.</p>
                                    <p>Pastikan Anda menggunakan link yang benar dari QR Code yang tertera pada sertifikat.</p>
                                </div>
                            </div>
                        </t>

                    </div>
                </div>
            </div>
        </t>
    </template>

    <record id="menu_ojt_programs" model="website.menu">
        <field name="name">OJT Programs</field>
        <field name="url">/ojt/programs</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">50</field>
    </record>
</odoo>