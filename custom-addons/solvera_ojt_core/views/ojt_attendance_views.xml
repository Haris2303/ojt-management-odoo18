<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="ojt_attendance_tree_view" model="ir.ui.view">
            <field name="name">ojt.attendance.tree</field>
            <field name="model">ojt.attendance</field>
            <field name="arch" type="xml">
                <list editable="bottom">
                    <field name="participant_id" required="1"/>
                    <field name="event_id" required="1" domain="[('id', 'in', available_event_ids)]"/>
                    <field name="available_event_ids"/>
                    <field name="batch_id"/>
                    <field name="check_in"/>
                    <field name="presence"/>
                    <field name="method"/>
                </list>
            </field>
        </record>

        <record id="ojt_attendance_form_view" model="ir.ui.view">
            <field name="name">ojt.attendance.form</field>
            <field name="model">ojt.attendance</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="participant_id"/>
                            <field name="event_id"/>
                            <field name="batch_id"/>
                            <field name="check_in"/>
                            <field name="check_out"/>
                            <field name="presence"/>
                            <field name="method"/>
                            <field name="notes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="ojt_attendance_view_pivot" model="ir.ui.view">
            <field name="name">ojt.attendance.view.pivot</field>
            <field name="model">ojt.attendance</field>
            <field name="arch" type="xml">
                <pivot string="Attendance Analysis">
                    <field name="batch_id" type="row"/>
                    <field name="participant_id" type="row"/>
                    <field name="presence" type="col"/>
                </pivot>
            </field>
        </record>

        <record id="ojt_attendance_view_graph" model="ir.ui.view">
            <field name="name">ojt.attendance.view.graph</field>
            <field name="model">ojt.attendance</field>
            <field name="arch" type="xml">
                <graph string="Attendance Analysis">
                    <field name="participant_id"/>
                    <field name="id" type="measure" operator="count"/>
                </graph>
            </field>
        </record>

        <record id="action_ojt_attendance" model="ir.actions.act_window">
            <field name="name">Attendance</field>
            <field name="res_model">ojt.attendance</field>
            <field name="view_mode">list,form,graph,pivot</field>
        </record>

    </data>
</odoo>