<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ojt_assignment_submit_view_kanban" model="ir.ui.view">
        <field name="name">ojt.assignment.submit.view.kanban</field>
        <field name="model">ojt.assignment.submit</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="participant_id"/>
                <field name="assignment_id"/>
                <field name="submitted_on"/>
                <field name="score"/>
                <field name="state"/>
                <field name="late"/>
                <field name="attachment_ids"/>
                <field name="url_link"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_record_top mb-2">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <span><t t-esc="record.participant_id.value"/></span>
                                        <span class="badge badge-danger ml-2" t-if="record.late.raw_value">LATE</span>
                                    </strong>
                                    <small><t t-esc="record.assignment_id.value"/></small>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div>
                                    <span class="text-muted"><i class="fa fa-clock-o" aria-hidden="true"/> <t t-esc="record.submitted_on.value"/></span>
                                </div>
                                <div class="mt-1">
                                    <span t-if="record.attachment_ids.raw_value.length > 0" title="Has Attachments" class="mr-2"><i class="fa fa-paperclip"/></span>
                                    <span t-if="record.url_link.value" title="Has URL Link"><i class="fa fa-link"/></span>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom mt-2">
                                <div class="oe_kanban_bottom_left">
                                    <label for="score" class="mr-2 font-weight-bold">Score:</label>
                                    <field name="score" widget="float"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="ojt_assignment_submit_view_tree" model="ir.ui.view">
        <field name="name">ojt.assignment.submit.view.tree</field>
        <field name="model">ojt.assignment.submit</field>
        <field name="arch" type="xml">
            <list string="Submissions" decoration-danger="late == True">
                <field name="assignment_id"/>
                <field name="participant_id"/>
                <field name="submitted_on"/>
                <field name="late"/>
                <field name="score"/>
                <field name="state" widget="badge" decoration-success="state == 'scored'" decoration-info="state == 'submitted'"/>
            </list>
        </field>
    </record>
    
    <record id="ojt_assignment_submit_view_form" model="ir.ui.view">
        <field name="name">ojt.assignment.submit.view.form</field>
        <field name="model">ojt.assignment.submit</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_mark_as_scored" string="Mark as Scored" type="object" class="oe_highlight" invisible="state != 'submitted'"/>
                    <button name="action_reset_to_submitted" string="Reset to Submitted" type="object" invisible="state != 'scored'"/>
                    <field name="state" widget="statusbar" statusbar_visible="submitted,scored"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="assignment_id" readonly="1"/>
                            <field name="participant_id" readonly="1"/>
                            <field name="submitted_on" readonly="1"/>
                            <field name="late" readonly="1"/>
                        </group>
                        <group>
                            <field name="score" required="state == 'scored'"/>
                            <field name="reviewer_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Submission Details">
                            <group>
                                <field name="attachment_ids" widget="many2many_binary"/>
                                <field name="url_link" widget="url"/>
                            </group>
                        </page>
                        <page string="Feedback">
                            <field name="feedback"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ojt_assignment_submit_action" model="ir.actions.act_window">
        <field name="name">Submissions for Scoring</field>
        <field name="res_model">ojt.assignment.submit</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'group_by':'state'}</field>
    </record>

    <menuitem
        id="ojt_assignment_submit_menu"
        name="Submissions"
        parent="menu_ojt_root" 
        action="ojt_assignment_submit_action"
        sequence="3"/>

</odoo>