    <template id="portal_participant_batch_selection" name="Select OJT Batch">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs" t-value="[('My Account', '/my/home'), ('Select Batch', '/my/dashboard')]"/>
            
            <div class="container">
                <h3 class="mt-4">Pilih Batch OJT</h3>
                <p>Anda terdaftar di beberapa program OJT. Silakan pilih batch mana yang ingin Anda lihat detailnya.</p>
                
                <div class="list-group mt-4">
                    <a t-foreach="participants" t-as="participant"
                        t-attf-href="/my/dashboard?participant_id=#{participant.id}"
                        class="list-group-item list-group-item-action">
                        <h5 class="mb-1"><t t-esc="participant.batch_id.name"/></h5>
                        <small>Status: <t t-esc="participant.state"/></small>
                    </a>
                </div>
            </div>
        </t>
    </template>

    <template id="portal_ojt_agenda_detail" name="OJT Agenda Detail">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs" t-value="[('My Account', '/my/home'), ('Dashboard', '/my/dashboard'), (event.name, '#')]"/>

            <t t-set="meeting_link" t-value="event_link.online_meeting_url or event.meeting_url"/>

            <div class="container py-5">
                
                <div t-if="meeting_link" class="text-center mb-4">
                    <a t-att-href="meeting_link" target="_blank" 
                    class="btn text-white px-4 py-2"
                    style="background:linear-gradient(135deg,#007bff,#0056b3);border-radius:50px;box-shadow:0 3px 6px rgba(0,0,0,0.1);">
                        <i class="fa fa-video-camera me-2"/> Join Online Meeting
                    </a>
                </div>

                <div class="p-4 bg-white rounded-4 shadow-sm">
                    <div class="pb-3 mb-3 border-bottom">
                        <h1 class="fw-semibold"><t t-esc="event.name"/></h1>
                        <p class="text-muted">
                            <i class="fa fa-calendar me-1"/> 
                            <t t-esc="event.date_begin.strftime('%d %B %Y')"/>,
                            <t t-esc="event.date_begin.strftime('%H:%M')"/> - 
                            <t t-esc="event.date_end.strftime('%H:%M')"/>
                        </p>
                    </div>

                    <div class="row">
                        <div class="col-lg-8">
                            <h4 class="mb-3">Deskripsi Sesi</h4>
                            <div t-field="event.note" class="text-muted"/>
                        </div>
                        <div class="col-lg-4">
                            <h4 class="mb-3">Detail</h4>
                            <ul class="list-group">
                                <li t-if="event.address_id" class="list-group-item bg-light rounded mb-2 border-0">
                                    <strong>Lokasi:</strong><br/>
                                    <address t-field="event.address_id" 
                                            t-options='{"widget": "contact", "fields": ["address", "name"]}'/>
                                </li>
                                <li class="list-group-item bg-light rounded border-0">
                                    <strong>Wajib Hadir:</strong>
                                    <span t-if="event_link.is_mandatory" class="badge bg-success">Ya</span>
                                    <span t-else="" class="badge bg-secondary">Tidak</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="portal_assignment_detail" name="OJT Assignment Detail">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs" t-value="[('My Account', '/my/home'), ('Dashboard', '/my/dashboard'), (assignment.name, '#')]"/>
            
            <div class="container py-5">
                <div class="assignment-header mb-4 p-4 rounded text-white" style="background:linear-gradient(135deg,#007bff,#00b4d8); box-shadow:0 4px 15px rgba(0,0,0,0.1);">
                    <h1 class="mb-2"><t t-esc="assignment.name"/></h1>
                    <p class="deadline mb-0">
                        <i class="fa fa-calendar"></i> Batas Waktu: 
                        <strong t-att-class="'text-warning' if not is_overdue else 'text-danger'">
                            <t t-if="assignment.deadline" t-esc="assignment.deadline.strftime('%d %B %Y, %H:%M')"/>
                        </strong>
                    </p>
                </div>

                <div class="mb-4">
                    <h4 class="mb-2"><i class="fa fa-file-alt"></i> Deskripsi</h4>
                    <div t-field="assignment.description" class="text-muted"/>
                </div>

                <t t-if="submission">
                    <div class="card card-custom mb-4 border-0 shadow-sm">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="fa fa-paper-plane"></i> Jawaban Anda</h5>
                        </div>
                        <div class="card-body">
                            <p>
                                Anda telah mengirimkan tugas ini pada:
                                <strong><t t-esc="submission.submitted_on.strftime('%d %B %Y, %H:%M')"/></strong>
                                <span t-if="submission.late" class="badge bg-danger ms-2">TERLAMBAT</span>
                            </p>

                            <div t-if="submission.url_link" class="mb-3">
                                <strong>Link URL:</strong> 
                                <a t-att-href="submission.url_link" target="_blank" class="text-decoration-none text-primary">
                                    <t t-esc="submission.url_link"/>
                                </a>
                            </div>

                            <div t-if="attachment_data" class="mb-3">
                                <strong>Lampiran:</strong>
                                <ul class="list-unstyled mt-2">
                                    <li t-foreach="attachment_data" t-as="att">
                                        <a t-att-href="att['url']" class="text-decoration-none">
                                            <i class="fa fa-download"></i> <t t-esc="att['name']"/>
                                        </a>
                                    </li>
                                </ul>
                            </div>

                            <hr/>
                            <h5 class="mb-3"><i class="fa fa-comment-dots"></i> Feedback &amp; Penilaian</h5>
                            <t t-if="submission.state == 'scored'">
                                <h5>Skor: <span class="text-primary"><t t-esc="submission.score"/></span> / <t t-esc="assignment.max_score"/></h5>
                                <div t-field="submission.feedback"/>
                            </t>
                            <t t-else="">
                                <p class="text-muted">Tugas Anda sedang menunggu penilaian dari mentor.</p>
                            </t>
                        </div>
                    </div>
                </t>

                <t t-else="">
                    <div class="card card-custom border-0 shadow-sm">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="fa fa-paper-plane"></i> Form Pengumpulan Tugas</h5>
                        </div>
                        <div class="card-body">
                            <form action="/my/assignment/submit" method="post" enctype="multipart/form-data">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <input type="hidden" name="assignment_id" t-att-value="assignment.id"/>
                                
                                <div class="mb-3">
                                    <label class="form-label">Link URL (opsional)</label>
                                    <input type="text" class="form-control" name="url_link" placeholder="https://github.com/... atau https://figma.com/..."/>
                                    <small class="text-muted">Isi jika jawaban Anda berupa link.</small>
                                </div>
                                
                                <div class="mb-3">
                                    <label class="form-label">Unggah File</label>
                                    <input type="file" class="form-control" name="attachments" multiple="multiple"/>
                                    <small class="text-muted">Anda bisa memilih lebih dari satu file.</small>
                                </div>
                                
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="fa fa-upload"></i> Kumpulkan Tugas
                                </button>
                            </form>
                        </div>
                    </div>
                </t>
            </div>
        </t>
    </template>

    <template id="portal_my_certificates" name="My Certificates">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs" t-value="[('My Account', '/my/home'), ('My Certificates', '/my/certificates')]"/>

            <div class="container py-5">
                <h2 class="mb-4 fw-bold text-primary"><i class="fa fa-certificate"></i> Sertifikat OJT Anda</h2>

                <t t-if="not participants">
                    <div class="alert alert-info">Anda belum terdaftar di program OJT manapun.</div>
                </t>

                <div t-if="participants" class="mt-4">
                    <div t-foreach="participants" t-as="participant" class="card mb-3 border-0 shadow-sm rounded-3 certificate-card">
                        <t t-set="certificate" t-value="participant.certificate_ids[:1]"/>

                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-1">Program: <strong><t t-esc="participant.batch_id.name"/></strong></h5>
                                <small class="text-muted">
                                    Status:
                                    <t t-if="certificate and certificate.state == 'issued'">
                                        <span class="badge bg-success certificate-badge">Telah Terbit</span>
                                    </t>
                                    <t t-else="">
                                        <span class="badge bg-secondary certificate-badge">Belum Tersedia</span>
                                    </t>
                                </small>
                            </div>
                            <div>
                                <t t-if="certificate and certificate.state == 'issued'">
                                    <a t-attf-href="/my/certificate/download/#{certificate.id}" class="btn btn-primary btn-sm">
                                        <i class="fa fa-download"></i> Unduh Sertifikat
                                    </a>
                                </t>
                                <t t-else="">
                                    <button class="btn btn-outline-secondary btn-sm" disabled="disabled">
                                        <i class="fa fa-clock"></i> Menunggu Terbit
                                    </button>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="portal_my_applications_list" name="My Applications List">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs" t-value="[('My Account', '/my/home'), ('My Applications', '/my/applications')]"/>
            
            <div class="container">
                <h3 class="mt-4">Lamaran Pekerjaan Anda</h3>
                
                <t t-if="not applications">
                    <div class="alert alert-info">Anda belum pernah mengirimkan lamaran.</div>
                </t>

                <div t-if="applications" class="list-group mt-4">
                    <div t-foreach="applications" t-as="app" class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1"><t t-esc="app.job_id.name or 'Tidak ada posisi'"/></h5>
                            <small class="text-muted">Dilamar pada: <span t-field="app.create_date" t-options='{"format": "dd MMMM yyyy"}'/></small>
                        </div>
                        <div>
                            <t t-if="app.portal_status == 'accepted'">
                                <span class="badge badge-pill badge-success">Accepted</span>
                            </t>
                            <t t-elif="app.portal_status == 'shortlisted'">
                                <span class="badge badge-pill badge-info">In Process</span>
                            </t>
                            <t t-elif="app.portal_status == 'rejected'">
                                <span class="badge badge-pill badge-danger">Not Retained</span>
                            </t>
                            <t t-else="">
                                <span class="badge badge-pill badge-secondary">Pending</span>
                            </t>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>