<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="portal_user_dropdown_inherit_dashboard" model="ir.ui.view">
            <field name="name">portal.user.dropdown.inherit.dashboard</field>
            <field name="inherit_id" ref="portal.user_dropdown"/>
            <field name="arch" type="xml">
                
                <xpath expr="//div[@id='o_logout_divider']" position="before">
                    
                    <a href="/my" role="menuitem" class="dropdown-item ps-3">
                        <i class="fa fa-fw fa-id-card-o me-1 small text-primary text-primary-emphasis"/> My Account
                    </a>
                    
                    <a href="/my/dashboard" role="menuitem" class="dropdown-item ps-3">
                        <i class="fa fa-fw fa-tachometer-alt me-1 small text-primary text-primary-emphasis"/> My Dashboard
                    </a>

                </xpath>

            </field>
        </record>
    </data>

    <template id="portal_template_qr_feedback">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container py-5">
                    <div class="alert alert-info text-center" role="alert">
                        <h4 class="alert-heading">Hasil Check-in</h4>
                        <p><t t-esc="feedback"/></p>
                        <hr/>
                        <a class="btn btn-primary" href="/my/home">Kembali ke Portal</a>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="portal_participant_dashboard" name="OJT Participant Dashboard">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs" t-value="[('My Account', '/my/home'), ('Dashboard', '/my/dashboard')]"/>

            <div class="container py-5">
                
                <!-- Header -->
                <div class="text-center text-white mb-5 p-5 rounded-4 shadow-sm"
                    style="background:linear-gradient(135deg,#007bff,#00b4d8);">
                    <h2>Selamat Datang, <strong><t t-esc="participant.partner_id.name"/></strong> ðŸ‘‹</h2>
                    <p class="lead">Batch: <strong><t t-esc="participant.batch_id.name"/></strong></p>
                </div>

                <!-- Progress Summary -->
                <h4 class="border-start border-4 border-primary ps-2 fw-semibold mb-4">Ringkasan Progres</h4>
                <div class="row text-center g-4 mb-5">
                    <div class="col-md-4">
                        <div class="card p-4 shadow-sm rounded-4">
                            <h6 class="text-muted">Nilai Akhir</h6>
                            <h2 class="text-primary fw-bold"><t t-esc="'%.2f' % participant.score_final"/></h2>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card p-4 shadow-sm rounded-4">
                            <h6 class="text-muted">Tingkat Kehadiran</h6>
                            <h2 class="text-success fw-bold"><t t-esc="'%.1f' % participant.attendance_rate"/>%</h2>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card p-4 shadow-sm rounded-4">
                            <h6 class="text-muted">Tugas Selesai</h6>
                            <h2 class="text-warning fw-bold">
                                <t t-esc="progress_data['assignment_completed_count']"/> /
                                <t t-esc="progress_data['assignment_total_count']"/>
                            </h2>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <!-- Assignments -->
                    <div class="col-lg-7">
                        <h4 class="border-start border-4 border-primary ps-2 fw-semibold mb-3">Daftar Tugas</h4>
                        <div class="list-group">
                            <t t-if="not assignments">
                                <div class="list-group-item">Belum ada tugas.</div>
                            </t>
                            <t t-foreach="assignments" t-as="assignment">
                                <a t-attf-href="/my/assignment/#{assignment.id}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center rounded-3 mb-2">
                                    <div>
                                        <h6 class="mb-1"><t t-esc="assignment.name"/></h6>
                                        <small class="text-muted"><i class="fa fa-calendar me-1"/>Deadline:
                                            <span t-field="assignment.deadline" t-options='{"format": "dd MMM yyyy"}'/>
                                        </small>
                                    </div>
                                    <t t-set="submission" t-value="assignment.submit_ids.filtered(lambda s: s.participant_id.id == participant.id)"/>
                                    <t t-if="submission">
                                        <span class="badge bg-success rounded-pill">Submitted</span>
                                    </t>
                                    <t t-else="">
                                        <span class="badge bg-warning text-dark rounded-pill">Pending</span>
                                    </t>
                                </a>
                            </t>
                        </div>
                    </div>

                    <!-- Agenda -->
                    <div class="col-lg-5">
                        <h4 class="border-start border-4 border-primary ps-2 fw-semibold mb-3">Agenda Terdekat</h4>
                        <ul class="list-group">
                            <t t-if="not agenda_items">
                                <li class="list-group-item">Belum ada agenda.</li>
                            </t>
                            <t t-foreach="agenda_items" t-as="agenda">
                                <a t-attf-href="/my/agenda/#{agenda.id}" class="list-group-item list-group-item-action rounded-3 mb-2">
                                    <strong><t t-esc="agenda.event_id.name"/></strong><br/>
                                    <small class="text-muted"><i class="fa fa-clock me-1"/><span t-field="agenda.event_id.date_begin" t-options='{"format": "dd MMM yyyy, HH:mm"}'/></small>
                                </a>
                            </t>
                        </ul>
                    </div>
                </div>

                <!-- Surveys -->
                <div class="mt-5">
                    <h4 class="border-start border-4 border-primary ps-2 fw-semibold mb-3">Survei &amp; Evaluasi</h4>
                    <div class="list-group">
                        <t t-if="not surveys">
                            <div class="list-group-item">Belum ada survei yang tersedia.</div>
                        </t>
                        <t t-foreach="survey_data" t-as="s_data">
                            <div t-if="s_data['is_done']" class="list-group-item d-flex justify-content-between align-items-center bg-light rounded-3 mb-2">
                                <div>
                                    <h6 class="mb-1 text-muted"><t t-esc="s_data['survey'].title"/></h6>
                                    <small class="text-muted">Anda sudah menyelesaikan survei ini.</small>
                                </div>
                                <span class="badge bg-success rounded-pill"><i class="fa fa-check"/> Selesai</span>
                            </div>
                            <a t-else="" t-att-href="s_data['survey'].get_start_url()" target="_blank"
                            class="list-group-item list-group-item-action d-flex justify-content-between align-items-center rounded-3 mb-2">
                                <div>
                                    <h6 class="mb-1"><t t-esc="s_data['survey'].title"/></h6>
                                    <small class="text-muted">Klik untuk memulai</small>
                                </div>
                                <span class="badge bg-primary rounded-pill">Mulai Survei</span>
                            </a>
                        </t>
                    </div>
                </div>

                <!-- Certificate -->
                <div class="mt-5">
                    <h4 class="border-start border-4 border-primary ps-2 fw-semibold mb-3">Sertifikat</h4>
                    <div class="list-group">
                        <div class="card mb-3 border-0 shadow-sm rounded-3 certificate-card">
                            <div class="card-body d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="mb-1">Program: <strong><t t-esc="participant.batch_id.name"/></strong></h5>
                                    <small class="text-muted">
                                        Status: 
                                        <t t-if="certificate_data and certificate_data.state == 'issued'">
                                            <span class="badge bg-success certificate-badge">Telah Terbit</span>
                                        </t>
                                        <t t-else="">
                                            <span class="badge bg-secondary certificate-badge">Belum Tersedia</span>
                                        </t>
                                    </small>
                                </div>
                                <div>
                                    <t t-if="certificate_data and certificate_data.state == 'issued'">
                                        <a t-attf-href="/my/certificate/download/#{certificate_data.id}" class="btn btn-primary btn-sm">
                                            <i class="fa fa-download"></i> Unduh Sertifikat
                                        </a>
                                    </t>
                                    <t t-else="">
                                        <button class="btn btn-outline-secondary btn-sm" disabled="disabled">
                                            <i class="fa fa-clock"></i> Menunggu Terbit
                                        </button>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="portal_participant_batch_selection" name="Select OJT Batch">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs" t-value="[('My Account', '/my/home'), ('Select Batch', '/my/dashboard')]"/>

            <div class="container ojt-container my-5" style="max-width:880px;">
                <h2 class="fw-bold text-center mb-3" style="color:#0056b3;">Pilih Batch OJT Anda</h2>
                <p class="text-muted text-center mb-5">
                    Anda terdaftar di beberapa program OJT. Pilih batch untuk melihat detailnya.
                </p>

                <div class="row g-4">
                    <t t-foreach="participants" t-as="participant">
                        <div class="col-md-6">
                            <a t-attf-href="/my/dashboard?participant_id=#{participant.id}" class="text-decoration-none">
                                <div class="card-hover batch-card d-flex align-items-center p-3" 
                                    style="background:#fff;border:none;border-radius:12px;transition:all 0.25s ease;">
                                    <div class="batch-icon me-3" 
                                        style="width:55px;height:55px;background:linear-gradient(135deg,#007bff,#0056b3);color:white;border-radius:50%;display:flex;align-items:center;justify-content:center;font-size:22px;">
                                        <i class="fa fa-users"/>
                                    </div>
                                    <div>
                                        <div class="batch-name fw-semibold mb-1" style="color:#0056b3;">
                                            <t t-esc="participant.batch_id.name"/>
                                        </div>
                                        <div class="status-text text-muted" style="font-size:0.9rem;">
                                            Status: <t t-esc="participant.state"/>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </t>
                </div>

                <div class="text-center mt-5">
                    <a href="/my/account" class="text-decoration-none" style="color:#0056b3;font-weight:500;">
                        <i class="fa fa-arrow-left"></i> Kembali ke Akun Saya
                    </a>
                </div>
            </div>
            <style>
                .card-hover {
                    transition: all 0.3s ease;
                    background-color: #fff;
                    border: none;
                    border-radius: 16px;
                    box-shadow: 0 3px 12px rgba(0, 0, 0, 0.08);
                }
                .card-hover:hover {
                    transform: translateY(-6px);
                    box-shadow: 0 6px 18px rgba(0, 0, 0, 0.12);
                }
            </style>
        </t>
    </template>

    <template id="portal_ojt_agenda_detail" name="OJT Agenda Detail">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs" t-value="[('My Account', '/my/home'), ('Dashboard', '/my/dashboard'), (event.name, '#')]"/>

            <t t-set="meeting_link" t-value="event_link.online_meeting_url or event.meeting_url"/>

            <div class="container py-5">
                
                <div t-if="meeting_link" class="text-center mb-4">
                    <a t-att-href="meeting_link" target="_blank" 
                    class="btn text-white px-4 py-2"
                    style="background:linear-gradient(135deg,#007bff,#0056b3);border-radius:50px;box-shadow:0 3px 6px rgba(0,0,0,0.1);">
                        <i class="fa fa-video-camera me-2"/> Join Online Meeting
                    </a>
                </div>

                <div class="p-4 bg-white rounded-4 shadow-sm">
                    <div class="pb-3 mb-3 border-bottom">
                        <h1 class="fw-semibold"><t t-esc="event.name"/></h1>
                        <p class="text-muted">
                            <i class="fa fa-calendar me-1"/> 
                            <t t-esc="event.date_begin.strftime('%d %B %Y')"/>,
                            <t t-esc="event.date_begin.strftime('%H:%M')"/> - 
                            <t t-esc="event.date_end.strftime('%H:%M')"/>
                        </p>
                    </div>

                    <div class="row">
                        <div class="col-lg-8">
                            <h4 class="mb-3">Deskripsi Sesi</h4>
                            <div t-field="event.note" class="text-muted"/>
                        </div>
                        <div class="col-lg-4">
                            <h4 class="mb-3">Detail</h4>
                            <ul class="list-group">
                                <li t-if="event.address_id" class="list-group-item bg-light rounded mb-2 border-0">
                                    <strong>Lokasi:</strong><br/>
                                    <address t-field="event.address_id" 
                                            t-options='{"widget": "contact", "fields": ["address", "name"]}'/>
                                </li>
                                <li class="list-group-item bg-light rounded border-0">
                                    <strong>Wajib Hadir:</strong>
                                    <span t-if="event_link.is_mandatory" class="badge bg-success">Ya</span>
                                    <span t-else="" class="badge bg-secondary">Tidak</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="portal_assignment_detail" name="OJT Assignment Detail">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs" t-value="[('My Account', '/my/home'), ('Dashboard', '/my/dashboard'), (assignment.name, '#')]"/>
            
            <div class="container py-5">
                <div class="assignment-header mb-4 p-4 rounded text-white" style="background:linear-gradient(135deg,#007bff,#00b4d8); box-shadow:0 4px 15px rgba(0,0,0,0.1);">
                    <h1 class="mb-2"><t t-esc="assignment.name"/></h1>
                    <p class="deadline mb-0">
                        <i class="fa fa-calendar"></i> Batas Waktu: 
                        <strong t-att-class="'text-warning' if not is_overdue else 'text-danger'">
                            <t t-if="assignment.deadline" t-esc="assignment.deadline.strftime('%d %B %Y, %H:%M')"/>
                        </strong>
                    </p>
                </div>

                <div class="mb-4">
                    <h4 class="mb-2"><i class="fa fa-file-alt"></i> Deskripsi</h4>
                    <div t-field="assignment.description" class="text-muted"/>
                </div>

                <t t-if="submission">
                    <div class="card card-custom mb-4 border-0 shadow-sm">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="fa fa-paper-plane"></i> Jawaban Anda</h5>
                        </div>
                        <div class="card-body">
                            <p>
                                Anda telah mengirimkan tugas ini pada:
                                <strong><t t-esc="submission.submitted_on.strftime('%d %B %Y, %H:%M')"/></strong>
                                <span t-if="submission.late" class="badge bg-danger ms-2">TERLAMBAT</span>
                            </p>

                            <div t-if="submission.url_link" class="mb-3">
                                <strong>Link URL:</strong> 
                                <a t-att-href="submission.url_link" target="_blank" class="text-decoration-none text-primary">
                                    <t t-esc="submission.url_link"/>
                                </a>
                            </div>

                            <div t-if="attachment_data" class="mb-3">
                                <strong>Lampiran:</strong>
                                <ul class="list-unstyled mt-2">
                                    <li t-foreach="attachment_data" t-as="att">
                                        <a t-att-href="att['url']" class="text-decoration-none">
                                            <i class="fa fa-download"></i> <t t-esc="att['name']"/>
                                        </a>
                                    </li>
                                </ul>
                            </div>

                            <hr/>
                            <h5 class="mb-3"><i class="fa fa-comment-dots"></i> Feedback &amp; Penilaian</h5>
                            <t t-if="submission.state == 'scored'">
                                <h5>Skor: <span class="text-primary"><t t-esc="submission.score"/></span> / <t t-esc="assignment.max_score"/></h5>
                                <div t-field="submission.feedback"/>
                            </t>
                            <t t-else="">
                                <p class="text-muted">Tugas Anda sedang menunggu penilaian dari mentor.</p>
                            </t>
                        </div>
                    </div>
                </t>

                <t t-else="">
                    <div class="card card-custom border-0 shadow-sm">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="fa fa-paper-plane"></i> Form Pengumpulan Tugas</h5>
                        </div>
                        <div class="card-body">
                            <form action="/my/assignment/submit" method="post" enctype="multipart/form-data">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <input type="hidden" name="assignment_id" t-att-value="assignment.id"/>
                                
                                <div class="mb-3">
                                    <label class="form-label">Link URL (opsional)</label>
                                    <input type="text" class="form-control" name="url_link" placeholder="https://github.com/... atau https://figma.com/..."/>
                                    <small class="text-muted">Isi jika jawaban Anda berupa link.</small>
                                </div>
                                
                                <div class="mb-3">
                                    <label class="form-label">Unggah File</label>
                                    <input type="file" class="form-control" name="attachments" multiple="multiple"/>
                                    <small class="text-muted">Anda bisa memilih lebih dari satu file.</small>
                                </div>
                                
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="fa fa-upload"></i> Kumpulkan Tugas
                                </button>
                            </form>
                        </div>
                    </div>
                </t>
            </div>
        </t>
    </template>

</odoo>