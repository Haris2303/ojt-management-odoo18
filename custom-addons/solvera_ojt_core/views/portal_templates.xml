<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_my_home_ojt" name="Portal My Home: OJT" inherit_id="portal.portal_my_home" priority="40">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <a class="list-group-item list-group-item-action" href="/my/ojt">
                <span class="badge badge-pill badge-info" t-esc="ojt_count"/>
                My OJT Program
            </a>
        </xpath>
    </template>

    <template id="portal_template_ojt_agenda">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs" t-value="[('My Account', '/my/home'), ('My OJT Program', '/my/ojt')]"/>
            <h3>OJT Program: <t t-esc="participant.batch_id.name"/></h3>
            <p>Periode: <t t-esc="participant.batch_id.start_date"/> s.d. <t t-esc="participant.batch_id.end_date"/></p>
            <div class="mt-4">
                <h4>Agenda Program</h4>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Sesi</th>
                            <th>Tanggal</th>
                            <th>Link Meeting</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="agenda_items" t-as="agenda">
                            <td><t t-esc="agenda.event_id.name"/></td>
                            <td><span t-field="agenda.event_id.date_begin" t-options='{"widget": "datetime"}'/></td>
                            <td>
                                <a t-if="agenda.online_meeting_url" t-att-href="agenda.online_meeting_url" target="_blank" class="btn btn-primary btn-sm">Join Meeting</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </t>
    </template>

    <template id="portal_template_qr_feedback">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container py-5">
                    <div class="alert alert-info text-center" role="alert">
                        <h4 class="alert-heading">Hasil Check-in</h4>
                        <p><t t-esc="feedback"/></p>
                        <hr/>
                        <a class="btn btn-primary" href="/my/home">Kembali ke Portal</a>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="portal_participant_dashboard" name="OJT Participant Dashboard">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs" t-value="[('My Account', '/my/home'), ('Dashboard', '/my/dashboard')]"/>
            
            <div class="container">
                <h2 class="mt-4">Selamat Datang, <t t-esc="participant.partner_id.name"/>!</h2>
                <p class="lead">Ini adalah ringkasan progres OJT Anda di batch: <strong><t t-esc="participant.batch_id.name"/></strong></p>

                <hr/>

                <h3>Ringkasan Progres</h3>
                <div class="row mt-4">
                    <div class="col-md-4">
                        <div class="card text-center p-3">
                            <div class="card-body">
                                <h4 class="card-title">Nilai Akhir</h4>
                                <p class="card-text display-4"><t t-esc="'%.2f' % participant.score_final"/></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card text-center p-3">
                            <div class="card-body">
                                <h4 class="card-title">Tingkat Kehadiran</h4>
                                <p class="card-text display-4"><t t-esc="'%.1f' % participant.attendance_rate"/>%</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card text-center p-3">
                            <div class="card-body">
                                <h4 class="card-title">Tugas Selesai</h4>
                                <p class="card-text display-4">
                                    <t t-esc="progress_data['assignment_completed_count']"/> / <t t-esc="progress_data['assignment_total_count']"/>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <hr class="mt-5"/>
                
                <div class="row">
                    <div class="col-lg-7">
                        <h3>Daftar Tugas</h3>
                        <div class="list-group mt-3">
                            <t t-if="not assignments">
                                <a href="#" class="list-group-item">Belum ada tugas.</a>
                            </t>
                            <t t-foreach="assignments" t-as="assignment">
                                <a t-attf-href="/my/assignment/#{assignment.id}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1"><t t-esc="assignment.name"/></h6>
                                        <small class="text-muted">Deadline: <span t-field="assignment.deadline" t-options='{"format": "dd MMM yyyy"}'/></small>
                                    </div>
                                    <t t-set="submission" t-value="assignment.submit_ids.filtered(lambda s: s.participant_id.id == participant.id)"/>
                                    <t t-if="submission">
                                        <span class="badge badge-success badge-pill">Submitted</span>
                                    </t>
                                    <t t-else="">
                                        <span class="badge badge-warning badge-pill">Pending</span>
                                    </t>
                                </a>
                            </t>
                        </div>
                    </div>

                    <div class="col-lg-5">
                        <h3>Agenda Terdekat</h3>
                        <ul class="list-group mt-3">
                            <t t-if="not agenda_items">
                                <li class="list-group-item">Belum ada agenda.</li>
                            </t>
                            <t t-foreach="agenda_items" t-as="agenda">
                                <a t-attf-href="/my/agenda/#{agenda.id}" class="list-group-item list-group-item-action">
                                    <strong><t t-esc="agenda.event_id.name"/></strong><br/>
                                    <small class="text-muted"><span t-field="agenda.event_id.date_begin" t-options='{"format": "dd MMM yyyy, HH:mm"}'/></small>
                                </a>
                            </t>
                        </ul>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="portal_my_home_add_ojt_dashboard_link" inherit_id="portal.portal_my_home" name="Portal My Home: OJT Dashboard">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-if="ojt_count">
                <div class="col-12 col-md-6">
                    <a class="o_portal_doc_card" href="/my/dashboard" title="OJT Dashboard">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <i class="fa fa-tachometer fa-3x text-primary mr-3" aria-hidden="true"></i>
                                    <div>
                                        <h5 class="card-title mb-0">OJT Dashboard</h5>
                                        <p class="card-text text-muted small">Lihat progres, tugas, dan jadwal Anda.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </t>

            <t t-if="ojt_count">
                <div class="col-12 col-md-6">
                    <a class="o_portal_doc_card" href="/my/certificates" title="My Certificates">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <i class="fa fa-certificate fa-3x text-success mr-3" aria-hidden="true"></i>
                                    <div>
                                        <h5 class="card-title mb-0">Sertifikat Saya</h5>
                                        <p class="card-text text-muted small">Lihat dan unduh sertifikat OJT Anda.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </t>
        </xpath>
    </template>

    <template id="portal_participant_batch_selection" name="Select OJT Batch">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs" t-value="[('My Account', '/my/home'), ('Select Batch', '/my/dashboard')]"/>
            
            <div class="container">
                <h3 class="mt-4">Pilih Batch OJT</h3>
                <p>Anda terdaftar di beberapa program OJT. Silakan pilih batch mana yang ingin Anda lihat detailnya.</p>
                
                <div class="list-group mt-4">
                    <a t-foreach="participants" t-as="participant"
                        t-attf-href="/my/dashboard?participant_id=#{participant.id}"
                        class="list-group-item list-group-item-action">
                        <h5 class="mb-1"><t t-esc="participant.batch_id.name"/></h5>
                        <small>Status: <t t-esc="participant.state"/></small>
                    </a>
                </div>
            </div>
        </t>
    </template>

    <template id="portal_ojt_agenda_detail" name="OJT Agenda Detail">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs" t-value="[('My Account', '/my/home'), ('Dashboard', '/my/dashboard'), (event.name, '#')]"/>
            
            <div class="container py-4">
                <div t-if="event.online_meeting_url" class="mb-4 text-center">
                    <a t-att-href="event.online_meeting_url" class="btn btn-primary btn-lg" target="_blank">
                        <i class="fa fa-video-camera" aria-hidden="true"/> Join Online Meeting
                    </a>
                </div>

                <div class="pb-2 mb-3 border-bottom">
                    <h1><t t-esc="event.name"/></h1>
                    <p class="lead text-muted">
                        <i class="fa fa-calendar" aria-hidden="true"/> 
                        <t t-esc="event.date_begin.strftime('%d %B %Y')"/>,
                        <t t-esc="event.date_begin.strftime('%H:%M')"/> - 
                        <t t-esc="event.date_end.strftime('%H:%M')"/>
                    </p>
                </div>

                <div class="row">
                    <div class="col-lg-8">
                        <h4>Deskripsi Sesi</h4>
                        <div t-field="event.note" class="text-muted"/>
                    </div>
                    <div class="col-lg-4">
                        <h4>Detail</h4>
                        <ul class="list-group">
                            <li t-if="event.address_id" class="list-group-item">
                                <strong>Lokasi:</strong><br/>
                                <address t-field="event.address_id" t-options='{"widget": "contact", "fields": ["address", "name"]}'/>
                            </li>
                            <li class="list-group-item">
                                <strong>Wajib Hadir:</strong>
                                <span t-if="event_link.is_mandatory" class="badge badge-success">Ya</span>
                                <span t-else="" class="badge badge-secondary">Tidak</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="portal_assignment_detail" name="OJT Assignment Detail">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs" t-value="[('My Account', '/my/home'), ('Dashboard', '/my/dashboard'), (assignment.name, '#')]"/>
            
            <div class="container py-4">
                <div class="pb-2 mb-3 border-bottom">
                    <h1><t t-esc="assignment.name"/></h1>
                    <p class="lead text-muted">
                        Batas Waktu: 
                        <strong t-att-class="'text-danger' if is_overdue else ''">
                            <t t-if="assignment.deadline" t-esc="assignment.deadline.strftime('%d %B %Y, %H:%M')"/>
                        </strong>
                    </p>
                </div>
                
                <h4>Deskripsi</h4>
                <div t-field="assignment.description" class="mb-5"/>

                <hr/>

                <t t-if="submission">
                    <div class="card bg-light">
                        <div class="card-header">
                            <h4 class="mb-0">Jawaban Anda</h4>
                        </div>
                        <div class="card-body">
                            <p>
                                Anda telah mengirimkan tugas ini pada: 
                                <strong><span t-field="submission.submitted_on" t-esc="submission.submitted_on.strftime('%d %B %Y, %H:%M')"/></strong>
                                <span t-if="submission.late" class="badge badge-danger ml-2">TERLAMBAT</span>
                            </p>
                            
                            <div t-if="submission.url_link">
                                <strong>Link URL:</strong> <a t-att-href="submission.url_link" target="_blank"><t t-esc="submission.url_link"/></a>
                            </div>
                            
                            <div t-if="attachment_data" class="mt-3">
                                <strong>Lampiran:</strong>
                                <ul class="list-unstyled">
                                    <li t-foreach="attachment_data" t-as="att">
                                        <a t-att-href="att['url']"><i class="fa fa-download"/> <t t-esc="att['name']"/></a>
                                    </li>
                                </ul>
                            </div>

                            <hr/>
                            <h4>Feedback &amp; Penilaian</h4>
                            <div t-if="submission.state == 'scored'">
                                <h5>Skor: <span class="text-primary"><t t-esc="submission.score"/></span> / <t t-esc="assignment.max_score"/></h5>
                                <div t-field="submission.feedback"/>
                            </div>
                            <div t-else="">
                                <p class="text-muted">Tugas Anda sedang menunggu penilaian dari mentor.</p>
                            </div>
                        </div>
                    </div>
                </t>
                <t t-else="">
                    <form action="/my/assignment/submit" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <input type="hidden" name="assignment_id" t-att-value="assignment.id"/>
                        
                        <h4>Form Pengumpulan Tugas</h4>
                        
                        <div class="form-group">
                            <label for="url_link">Link URL (opsional)</label>
                            <input type="text" class="form-control" name="url_link" placeholder="https://github.com/... atau https://figma.com/..."/>
                            <small class="form-text text-muted">Isi jika jawaban Anda berupa link (misal: Github, Figma, Google Drive, dll).</small>
                        </div>
                        
                        <div class="form-group">
                            <label for="attachments">Unggah File</label>
                            <input type="file" class="form-control-file" name="attachments" multiple="multiple"/>
                            <small class="form-text text-muted">Anda bisa memilih lebih dari satu file.</small>
                        </div>
                        
                        <button type="submit" class="btn btn-primary mt-3">Kumpulkan Tugas</button>
                    </form>
                </t>
            </div>
        </t>
    </template>

    <template id="portal_my_certificates" name="My Certificates">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs" t-value="[('My Account', '/my/home'), ('My Certificates', '/my/certificates')]"/>
            
            <div class="container">
                <h3 class="mt-4">Sertifikat OJT Anda</h3>
                
                <t t-if="not participants">
                    <div class="alert alert-info">Anda belum terdaftar di program OJT manapun.</div>
                </t>

                <div t-if="participants" class="list-group mt-4">
                    <div t-foreach="participants" t-as="participant" class="list-group-item d-flex justify-content-between align-items-center">
                        
                        <t t-set="certificate" t-value="participant.certificate_id[:1]"/>

                        <div>
                            <h5 class="mb-1">Program: <t t-esc="participant.batch_id.name"/></h5>
                            <small class="text-muted">Status: 
                                <span t-if="certificate and certificate.state == 'issued'" class="badge badge-success">Telah Terbit</span>
                                <span t-else="" class="badge badge-secondary">Belum Tersedia</span>
                            </small>
                        </div>
                        <div>
                            <a t-if="certificate and certificate.state == 'issued'"
                                t-attf-href="/my/certificate/download/#{certificate.id}"
                                class="btn btn-primary btn-sm">
                                    <i class="fa fa-download"/> Unduh Sertifikat
                            </a>
                        </div>

                        </div>
                </div>
            </div>
        </t>
    </template>
</odoo>