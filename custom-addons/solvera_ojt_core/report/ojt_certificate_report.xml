<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_report_ojt_certificate" model="ir.actions.report">
        <field name="name">OJT Certificate</field>
        <field name="model">ojt.certificate</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">solvera_ojt_core.report_ojt_certificate_document</field>
        <field name="report_file">solvera_ojt_core.report_ojt_certificate_document</field>
        <field name="print_report_name">(object.name or 'Certificate').replace('/','_')</field>
        <field name="binding_model_id" ref="model_ojt_certificate"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_ojt_certificate_document">
        <t t-call="web.basic_layout">
            <div class="page" style="font-family: 'Helvetica', sans-serif; padding: 40px; border: 10px solid #00A09D; height: 100%;">
                <t t-foreach="docs" t-as="doc">
                    <div class="text-center">
                        <h1 style="color: #00A09D; font-size: 48px; font-weight: bold; margin-top: 60px;">Certificate of Completion</h1>
                        <p style="font-size: 18px; margin-top: 40px;">This certificate is awarded to</p>
                        <h2 style="font-size: 36px; font-weight: bold; margin-top: 20px; border-bottom: 2px solid #333; display: inline-block; padding-bottom: 5px;">
                            <span t-esc="doc.participant_id.partner_id.name"/>
                        </h2>
                        <p style="font-size: 18px; margin-top: 40px;">
                            For successfully completing the On-the-Job Training Program
                        </p>
                        <h3 style="font-size: 28px; font-weight: bold; color: #00A09D; margin-top: 20px;">
                            "<span t-esc="doc.batch_id.name"/>"
                        </h3>
                        <p style="font-size: 16px; margin-top: 50px;">
                            Issued on: <span t-esc="doc.issue_date.strftime('%B %d, %Y')"/>
                        </p>
                    </div>
                </t>
            </div>
        </t>
    </template>
</odoo>