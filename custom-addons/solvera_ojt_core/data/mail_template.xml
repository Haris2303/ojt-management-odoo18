<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="mail_template_ojt_portal_invitation" model="mail.template">
            <field name="name">OJT: Portal Invitation (Manual)</field>
            <!-- Hilangkan model_id kalau belum mau dihubungkan -->
            <field name="subject">Selamat Datang di Program OJT!</field>
            <field name="email_from">${(user.email_formatted or '')|safe}</field>
            <field name="email_to">${object.email or 'example@email.com'}</field>
            <field name="body_html" type="html">
                <![CDATA[
                <div style="margin: 0; padding: 0; font-family: Arial, sans-serif;">
                    <p>Halo <strong>${object.name if object else 'Peserta'}</strong>,</p>
                    <p>
                        Selamat datang di Program OJT kami!  
                        Kami senang Anda bergabung dalam pelatihan ini.
                    </p>
                    <p>
                        Untuk informasi lebih lanjut, silakan hubungi tim HR kami.
                    </p>
                    <p>Terima kasih,</p>
                    <p>Tim OJT</p>
                </div>
                ]]>
            </field>
        </record>

    </data>
</odoo>
