<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="module_category_ojt" model="ir.module.category" >
            <field name="name">OJT Management</field>
            <field name="description">User access levels for OJT Management module</field>
            <field name="sequence">20</field>
        </record>

        <record id="ojt_group_viewer" model="res.groups">
            <field name="name">Viewer</field>
            <field name="category_id" ref="module_category_ojt"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Read-only access to OJT reports.</field>
        </record>

        <record id="ojt_group_mentor" model="res.groups">
            <field name="name">Mentor / Trainer</field>
            <field name="category_id" ref="module_category_ojt"/>
            <field name="implied_ids" eval="[(4, ref('ojt_group_viewer'))]"/>
            <field name="comment">Manage assignments, attendance, and scoring for their batches.</field>
        </record>

        <record id="ojt_group_coordinator" model="res.groups">
            <field name="name">Coordinator</field>
            <field name="category_id" ref="module_category_ojt"/>
            <field name="implied_ids" eval="[(4, ref('ojt_group_mentor'))]"/>
            <field name="comment">Manage batches, link events, and generate certificates.</field>
        </record>
        
        <record id="ojt_group_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_ojt"/>
            <field name="implied_ids" eval="[(4, ref('ojt_group_coordinator'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
            <field name="comment">Full access to all OJT management features.</field>
        </record>

        <record id="ojt_batch_portal_user_rule" model="ir.rule">
            <field name="name">OJT Batch: Portal User can see own batch</field>
            <field name="model_id" ref="model_ojt_batch"/>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="domain_force"><![CDATA[[('participant_ids.partner_id', '=', user.partner_id.id)]]]></field>
        </record>

        <record id="ojt_assignment_submit_portal_user_rule" model="ir.rule">
            <field name="name">OJT Submission: Portal user can see own submissions</field>
            <field name="model_id" ref="model_ojt_assignment_submit"/>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="domain_force">[('participant_id.partner_id', '=', user.partner_id.id)]</field>
        </record>

        <record id="ojt_event_link_portal_user_rule" model="ir.rule">
            <field name="name">OJT Agenda: Portal user can see own batch agenda</field>
            <field name="model_id" ref="model_ojt_event_link"/>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="domain_force">[('batch_id.participant_ids.partner_id', 'in', [user.partner_id.id])]</field>
        </record>

        <record id="event_event_portal_user_rule" model="ir.rule">
            <field name="name">Event: Portal user can see events linked to any OJT</field>
            <field name="model_id" ref="event.model_event_event"/>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="domain_force">[('event_link_ids', '!=', False)]</field>
        </record>

        <record id="ir_attachment_portal_user_rule" model="ir.rule">
            <field name="name">Attachment: Portal user can only see own attachments</field>
            <field name="model_id" ref="base.model_ir_attachment"/>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
        </record>

        <record id="ojt_certificate_portal_user_rule" model="ir.rule">
            <field name="name">OJT Certificate: Portal user can see own certificate</field>
            <field name="model_id" ref="model_ojt_certificate"/>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="domain_force">[('participant_id.partner_id', '=', user.partner_id.id)]</field>
        </record>

    </data>
</odoo>